<configuration>

	<conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
	<conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
	<conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

	<property name="LOG_FILE" value="elbook"/>
	<property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
	<property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
    <property name="MAIL_ENABLE_ERROR_APPENDER" value="${log.mail.enable.error.appender:-true}" />


    <property name="MAIL_SUBJECT_ADDON" value="${LOG_MAIL_SUBJECT_ADDON:-notSet}" />
    <property name="MAIL_SMTP_HOST" value="${LOG_MAIL_SMTP_HOST:-notSet}" />
    <property name="MAIL_SMTP_PORT" value="${log.mail.smtp.port:-25}" />
    <property name="MAIL_STARTTLS" value="${log.mail.starttls:-true}" />
    <property name="MAIL_USERNAME" value="${LOG_MAIL_USERNAME:-notSet}" />
    <property name="MAIL_PASSWORD" value="${LOG_MAIL_PASSWORD:-notSet}" />
    <property name="MAIL_SEND_FROM" value="${LOG_MAIL_SEND_FROM:-notSet}" />
    <property name="MAIL_SEND_TO" value="${LOG_MAIL_SEND_TO:-notSet}" />

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <springProfile name="dev">
        <root level="DEBUG" additivity="false">
            <appender-ref ref="consoleAppender" />
        </root>
    </springProfile>

	<springProfile name="!dev">
        <appender name="mailAppender" class="ch.qos.logback.classic.net.SMTPAppender">
            <smtpHost>${MAIL_SMTP_HOST}</smtpHost>
            <smtpPort>${MAIL_SMTP_PORT}</smtpPort>
            <STARTTLS>${MAIL_STARTTLS}</STARTTLS>
            <username>${MAIL_USERNAME}</username>
            <password>${MAIL_PASSWORD}</password>
            <from>${MAIL_SEND_FROM}</from>
            <to>${MAIL_SEND_TO}</to>
            <subject>elBook: ${MAIL_SUBJECT_ADDON}: Fehler: %logger - %m</subject>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </layout>
        </appender>

        <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/${LOG_FILE}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/${LOG_FILE}_%d{yyyy-MM-dd}.log</fileNamePattern>
            </rollingPolicy>

            <encoder>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <if condition='property("MAIL_ENABLE_ERROR_APPENDER").equalsIgnoreCase("true")'>
            <then>
                <root level="WARN" additivity="false">
                    <appender-ref ref="mailAppender" />
                </root>
            </then>
        </if>

        <root level="INFO" additivity="false">
            <appender-ref ref="fileAppender" />
            <appender-ref ref="consoleAppender" />
        </root>
	</springProfile>

</configuration>
